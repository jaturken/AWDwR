<%= semantic_form_for(@product) do |f| %>
  
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <%= f.input :price %>
    <%= f.input :locale, :as => :select, collection: LANGUAGES,
      include_blank: false%>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit%>
  <% end %>

<% end %>
