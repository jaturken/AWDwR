<%= semantic_form_for(@user, :url => user_registration_path) do |f| %>
	<%= devise_error_messages! %>

	<%= f.inputs do %>
		<%= f.input :name %>
		<%= f.input :email , as: :email, :input_html => { size: 40 }%>
		<%= f.input :password, as: :password, :input_html => { size: 40 }%>
		<%= f.input :password_confirmation, as: :password, :input_html => { size: 40 } %>
	<% end %>
	<%= f.actions do%>
	<%= f.action :submit, label: "Register"%>
	<% end %>
<% end %>

<%= render "links" %>